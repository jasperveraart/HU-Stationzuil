<MessageLabel>:
    size_hint: None, None
    size: self.texture_size
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    shorten: False
    wrap: True

<MessageRow>:
    orientation: 'horizontal'
    padding: [100, 0, 100, 0]
    Label:
        id: label_id
        size_hint_x: 0.8
        text: root.message_text
        halign: 'left'
        valign: 'middle'
        size: self.texture_size
        text_size: self.width, None
    Button:
        size_hint_x: 0.2
        text: 'Update'
        background_normal: ''
        background_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
        on_release: root.on_release_update()
        font_name: "Arial"
        font_size: '15sp'

<ImageButton>:
    source: 'nslogo.png'
    size_hint: None, None
    size: '180dp', '100dp'
    pos_hint: {'top': 1, 'left': 1}

<LoginWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 10]
        spacing: 20

        canvas.before:
            Color:
                rgba: (0xFF/255.0, 0xC9/255.0, 0x17/255.0, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        AnchorLayout:
            height: '200dp'

            Image:
                source: 'nslogo.png'
                size_hint: [1, 1]
                width: '200dp'
                height: '200dp'
                anchor_x: 'center'

        # spacer
        Widget:
            size_hint_y: None
            height: 30

        BoxLayout:
            orientation: 'vertical'
            padding: [200, 0, 200, 0]
            size_hint_y: None

            Label:
                size_hint_y: None
                height: '30dp'
                text: 'Moderatie Tinder'
                font_name: "Arial"
                font_size: 50
                halign: 'center'
                valign: 'middle'
                text_size: self.size



        # Berichten invul veld met Label
        BoxLayout:
            orientation: 'vertical'
            padding: [200, 0, 200, 0]
            size_hint_y: None

            Label:
                size_hint_y: None
                height: '30dp'
                text: 'Email'
                font_name: "Arial"
                font_size: 30
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            TextInput:
                font_name: "Arial"
                font_size: '20sp'
                hint_text: 'Email'
                multiline: False

                foreground_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                cursor_color: (0x00/255.0, 0x63/255.0, 0xD3/255.0, 1)

                id: email

                size_hint_y: None
                height: '40dp'
                padding_y: [(self.height - self.line_height) / 2] * 2


                canvas.before:
                    Color:
                        rgba: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                    Line:
                        rectangle: (self.x, self.y, self.width, self.height)
                        width: 2  # Breedte van de rand

        # spacer between objects
        Widget:
            size_hint_y: None
            height: 30


        # Naam veld
        BoxLayout:
            orientation: 'vertical'
            padding: [200, 0, 200, 0]
            size_hint_y: None

            Label:
                size_hint_y: None
                height: '30dp'
                text: 'Wachtwoord'
                font_name: "Arial"
                font_size: 30
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            TextInput:
                font_name: "Arial"
                font_size: '20sp'
                hint_text: 'Wachtwoord'
                multiline: False
                password: True

                foreground_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                cursor_color: (0x00/255.0, 0x63/255.0, 0xD3/255.0, 1)

                id: password

                size_hint_y: None
                height: '40dp'
                padding_y: [(self.height - self.line_height) / 2] * 2


                canvas.before:
                    Color:
                        rgba: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                    Line:
                        rectangle: (self.x, self.y, self.width, self.height)
                        width: 2  # Breedte van de rand

        BoxLayout:
            padding: [200, 0, 200, 140]
            Button:
                font_size: '20sp'
                font_name: "Arial"
                size_hint_y: None
                height: '50dp'
                text: 'Login'
                background_normal: ''
                background_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                on_press: root.login()

<ModerateWidget>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (0xFF/255.0, 0xC9/255.0, 0x17/255.0, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        ImageButton:
            source: 'nslogo.png'
            size_hint: None, None
            size: '180dp', '100dp'
            pos_hint: {'top': 1, 'left': 1}
            on_press: root.settings()

        Label:
            id: moderator
            text: 'Moderator naam'
            font_name: "Arial"
            font_size: sp(20)
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.98, 'right': 0.98}
            halign: 'right'
            valign: 'top'
            text_size: max(self.width, sp(200)), None

        CustomCarousel:
            id: carousel
            size_hint: (0.8, 0.4)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}  # Centreer de carousel in de FloatLayout
            loop: True  # Hiermee gaat de Carousel oneindig rond

        BoxLayout:
            padding: [200, 0, 200, 140]
            spacing: 20
            Button:
                font_size: '15sp'
                font_name: "Arial"
                size_hint_y: None
                height: '50dp'
                text: 'Afkeuren'
                background_normal: ''
                background_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                on_press: root.swipe(False)

            Button:
                font_size: '15sp'
                font_name: "Arial"
                size_hint_y: None
                height: '50dp'
                text: 'Goedkeuren'
                background_normal: ''
                background_color: (0x00/255.0, 0x30/255.0, 0x82/255.0, 1)
                on_press: root.swipe(True)

<SettingsWidget>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: (0xFF/255.0, 0xC9/255.0, 0x17/255.0, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        ImageButton:
            source: 'nslogo.png'
            size_hint: None, None
            size: '180dp', '100dp'
            pos_hint: {'top': 1, 'left': 1}
            on_press: root.moderate()

        Label:
            id: moderator
            text: 'Moderator naam'
            font_name: "Arial"
            font_size: sp(20)
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'top': 0.98, 'right': 0.98}
            halign: 'right'
            valign: 'top'
            text_size: max(self.width, sp(200)), None

        RecycleView:
            size_hint: 1, 0.8
            pos_hint: {'top': 0.8}
            id: messages_view
            viewclass: 'MessageRow'
            RecycleBoxLayout:
                default_size: None, dp(56)  # Hoogte van elke rij
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
